{
  "digests": [
    {
      "id": "global_headlines",
      "mode": "headlines",
      "display_name": "Global Headlines",
      "description": "Top headlines from key regions.",
      "news_queries": [
        {
          "endpoint": "top-headlines",
          "country": "us",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "cn",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "tw",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "fr",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "de",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "ru",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "it",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "es",
          "pageSize": 30
        }
      ],
      "email": {
        "subject_template": "Headline Briefing - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "general"
        ]
      },
      "output": {
        "filename_prefix": "headline-briefing"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    },
    {
      "id": "science_tech",
      "mode": "topic",
      "display_name": "Science and Technology",
      "description": "Science and technology coverage in Chinese and English.",
      "news_queries": [
        {
          "endpoint": "everything",
          "q": "(\"科学\" OR \"技术\")",
          "searchIn": "title,description",
          "language": "zh",
          "pageSize": 20,
          "sortBy": "publishedAt"
        },
        {
          "endpoint": "everything",
          "q": "(\"Science\" OR \"Technology\")",
          "searchIn": "title,description",
          "language": "en",
          "pageSize": 20,
          "sortBy": "publishedAt"
        }
      ],
      "newsapi": {
        "max_age_days": 2
      },
      "email": {
        "subject_template": "Science and Technology Briefing - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "science",
          "technology"
        ]
      },
      "output": {
        "filename_prefix": "science-tech-briefing"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    },
