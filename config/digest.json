{
  "digests": [
    {
      "id": "global_headlines",
      "mode": "headlines",
      "display_name": "Global Headlines",
      "description": "Top headlines from key regions.",
      "news_queries": [
        {
          "endpoint": "top-headlines",
          "country": "us",
          "excludeDomains": "www.epsn.com,www.chicago.suntimes.com,www.nfl.com",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "cn",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "tw",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "fr",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "de",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "ru",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "it",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "es",
          "pageSize": 30
        }
      ],
      "email": {
        "subject_template": "头条简报 - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "general"
        ]
      },
      "output": {
        "filename_prefix": "头条简报"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    },
    {
      "id": "ai",
      "mode": "topic",
      "display_name": "Artificial Intelligence",
      "description": "Artificial intelligence updates in Chinese and English.",
      "news_queries": [
        {
          "endpoint": "everything",
          "q": "(\"人工智能\" OR \"AI\" OR \"大模型\")",
          "searchIn": "title,description,content",
          "language": "zh",
          "pageSize": 20,
          "sortBy": "publishedAt"
        },
        {
          "endpoint": "everything",
          "q": "(\"artificial intelligence\" OR \"AI\" OR \"large language model\" OR \"LLM\")",
          "searchIn": "title,description",
          "language": "en",
          "pageSize": 20,
          "sortBy": "publishedAt"
        }
      ],
      "newsapi": {
        "max_age_days": 2
      },
      "email": {
        "subject_template": "AI Briefing - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "ai"
        ]
      },
      "output": {
        "filename_prefix": "ai-briefing"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    },
    {
      "id": "physics",
      "mode": "topic",
      "display_name": "Physics",
      "description": "News in Physics updates",
      "news_queries": [
        {
          "endpoint": "everything",
          "q": "(\"物理学\" OR \"理论物理\" OR \"物理学家\")",
          "searchIn": "title,description,content",
          "language": "zh",
          "pageSize": 30,
          "sortBy": "publishedAt"
        },
        {
          "endpoint": "everything",
          "q": "(\"physics\" OR \"theoretical physics\" OR \"physicist\" OR \"high energy physics\")",
          "searchIn": "title,description",
          "language": "en",
          "pageSize": 30,
          "sortBy": "publishedAt"
        }
      ],
      "newsapi": {
        "max_age_days": 5
      },
      "email": {
        "subject_template": "Physics Briefing - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "physics"
        ]
      },
      "output": {
        "filename_prefix": "physics-briefing"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    },
    {
      "id": "entertainment",
      "mode": "topic",
      "display_name": "Entertainment News",
      "description": "Entertainment news related to Movies, TV shows popular in English world.",
      "news_queries": [
        {
          "endpoint": "everything",
          "q": "(\"movies\" OR \"films\" OR \"TV shows\" OR \"entertainment\")",
          "searchIn": "title,description",
          "language": "en",
          "pageSize": 20,
          "sortBy": "popularity"
        }
      ],
      "newsapi": {
        "max_age_days": 2
      },
      "email": {
        "subject_template": "最热影音资讯简报 - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "entertainment"
        ]
      },
      "output": {
        "filename_prefix": "最热影音资讯简报"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    }
  ]
}
