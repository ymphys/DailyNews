{
  "digests": [
    {
      "id": "global_headlines",
      "mode": "headlines",
      "display_name": "Global Headlines",
      "description": "Top headlines from key regions.",
      "news_queries": [
        {
          "endpoint": "top-headlines",
          "country": "us",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "cn",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "tw",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "fr",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "de",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "ru",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "it",
          "pageSize": 30
        },
        {
          "endpoint": "top-headlines",
          "country": "es",
          "pageSize": 30
        }
      ],
      "email": {
        "subject_template": "头条简报 - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "general"
        ]
      },
      "output": {
        "filename_prefix": "头条简报"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    },
    {
      "id": "china_economy",
      "mode": "topic",
      "display_name": "China Economy and Politics",
      "description": "Economic and political developments related to China.",
      "news_queries": [
        {
          "endpoint": "everything",
          "q": "(\"经济\") OR (\"政治\") OR (\"习近平\")  OR (\"共产党\")",
          "searchIn": "title,description",
          "language": "zh",
          "pageSize": 20,
          "sortBy": "publishedAt"
        },
        {
          "endpoint": "everything",
          "q": "(\"China\") AND ((\"Economy\") OR (\"Politics\")) OR (\"Xi Jinping\") OR (\"Communist Party\")",
          "searchIn": "title,description",
          "language": "en",
          "pageSize": 20,
          "sortBy": "publishedAt"
        }
      ],
      "newsapi": {
        "max_age_days": 2
      },
      "email": {
        "subject_template": "中国政经简报 - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "china",
          "economy",
          "politics"
        ]
      },
      "output": {
        "filename_prefix": "中国政经简报"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    },
    {
      "id": "ai",
      "mode": "topic",
      "display_name": "Artificial Intelligence",
      "description": "Artificial intelligence updates in Chinese and English.",
      "news_queries": [
        {
          "endpoint": "everything",
          "q": "(\"人工智能\" OR \"AI\" OR \"大模型\")",
          "searchIn": "title,description,content",
          "language": "zh",
          "pageSize": 20,
          "sortBy": "publishedAt"
        },
        {
          "endpoint": "everything",
          "q": "(\"artificial intelligence\" OR \"AI\" OR \"large language model\" OR \"LLM\")",
          "searchIn": "title,description",
          "language": "en",
          "pageSize": 20,
          "sortBy": "publishedAt"
        }
      ],
      "newsapi": {
        "max_age_days": 2
      },
      "email": {
        "subject_template": "AI Briefing - {local_dt:%Y-%m-%d %H:%M}",
        "tags": [
          "ai"
        ]
      },
      "output": {
        "filename_prefix": "ai-briefing"
      },
      "schedule": {
        "default_time": "08:00",
        "timezone": "Asia/Shanghai"
      }
    },
    {
      "id": "entertainment",
      "mode": "topic",
      "display_name": "Entertainment News",
      "description": "Entertainment news related to Movies, TV shows popular in English world.",
      "news_queries": [
        {
          "endpoint": "everything",
          "q": "(\"movies\" OR \"films\" OR \"TV shows\" OR \"entertainment\")",
          "searchIn": "title,description",
          "language": "en",
          "pageSize": 20,
          "sortBy": "popularity"
        }
      ],
      "newsapi": {
        "max_age_days": 2
      },
      "email": {
        "subject_template": "最热影音资讯简报 - {local_dt:%Y-%m-%d %H:%M}",
